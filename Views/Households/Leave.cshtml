@model dc_portal.Models.Household

@{
    ViewBag.Title = "Leave Household?";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to leave household?</h3>
<div>
    <h4>Household</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Greeting)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Greeting)
        </dd>

    </dl>
</div>
    @using (Html.BeginForm("Leave", "Households", FormMethod.Post, new { @class = ""}))
    {
        @Html.AntiForgeryToken()
        <div>
            <div class="row">
                <div class="col">
                    Select a new Head of Household
                    <div class="col-5">
                        @Html.DropDownList("HouseMembers", ViewBag.HouseMembers as SelectList)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-actions no-color">
                        <input type="submit" value="Leave" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    }


