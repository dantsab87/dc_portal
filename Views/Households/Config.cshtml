@model dc_portal.Models.ConfigVM

@{
    ViewBag.Title = "Config";
}

<h2>Configuration</h2>


@using (Html.BeginForm("Config", "Households", FormMethod.Post, new { @class = "" , enctype = "Multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.Hidden("HouseholdId", (int)ViewBag.HouseholdId);

    <div class="form-horizontal">
        <h4>Bank Account</h4>
        <hr />
        <div class="form-group">
            <span class="control-label col-md-2">Bank Account Name</span>
            <div class="col-md-10">
                @Html.TextBoxFor(u => u.Name, new { htmlAttributes = new { @class = "form-control", } })
                @Html.ValidationMessageFor(u => u.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Starting Balance</span>
            <div class="col-md-10">
                @Html.TextBoxFor(u => u.StartingBalance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.StartingBalance, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Low Balance</span>
            <div class="col-md-10">
                @Html.TextBoxFor(u => u.LowBalance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.LowBalance, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Account Type</span>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(u => u.AccountType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.AccountType, "", new { @class = "text-danger" })
            </div>
        </div>



        <h4>Budget</h4>
        <hr />
        <div class="form-group">
            <span class="control-label col-md-2">Budget Name</span>
            <div class="col-md-10">
                @Html.TextBoxFor(u => u.BudgetName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.BudgetName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">Target Amount</span>
            <div class="col-md-10">
                @Html.TextBoxFor(u => u.TargetAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.TargetAmount, "", new { @class = "text-danger" })
            </div>
        </div>




        <h4>Budget Items</h4>
        <hr />
        <div class="form-group">
            <span class="control-label col-md-2">Budget Item Name</span>
            <div class="col-md-10">
                @Html.TextBoxFor(u => u.BIName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.BIName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">Target Amount</span>
            <div class="col-md-10">
                @Html.TextBoxFor(u => u.TargetAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.TargetAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}